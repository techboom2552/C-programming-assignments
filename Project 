#include <stdio.h>
#include <string.h>

struct Student {
    int id;
    char name[50];
    float marks;
};

int main() {
    struct Student s[50];
    int n = 0, choice, delId, i, found;
    
    while(1) {
        printf("\n1.Add 2.Display 3.Delete 4.Exit\nChoice: ");
        scanf("%d", &choice);
        
        if(choice == 1 && n < 50) {
            printf("ID: ");
            scanf("%d", &s[n].id);
            printf("Name: ");
            scanf("%s", s[n].name);
            printf("Marks: ");
            scanf("%f", &s[n].marks);
            n++;
            printf("Added successfully!\n");
        }
        else if(choice == 2) {
            if(n == 0) {
                printf("No records!\n");
            } else {
                printf("\nID\tName\t\tMarks\n");
                for(i = 0; i < n; i++)
                    printf("%d\t%s\t\t%.2f\n", s[i].id, s[i].name, s[i].marks);
            }
        }
        else if(choice == 3) {
            printf("Enter ID to delete: ");
            scanf("%d", &delId);
            found = 0;
            for(i = 0; i < n; i++) {
                if(s[i].id == delId) {
                    found = 1;
                    for(int j = i; j < n - 1; j++)
                        s[j] = s[j + 1];
                    n--;
                    printf("Deleted successfully!\n");
                    break;
                }
            }
            if(!found) printf("ID not found!\n");
        }
        else if(choice == 4) {
            break;
        }
    }
    return 0;
}